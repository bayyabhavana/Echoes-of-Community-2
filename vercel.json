{
    "functions": {
        "api/index.js": {
            "includeFiles": "server/data/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/index.html"
        },
        {
            "source": "/((?!api/|assets/|favicon.ico|index.html|.*\\..*).*)",
            "destination": "/index.html"
        }
    ]
}